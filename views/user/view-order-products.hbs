<section>
    {{#each products}}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3 p-3">
                <div class="card" style="width:15rem; height:24rem;">
                    <img class="card-img-top"
                      src="/product-image/{{this.product._id}}.jpg" alt="card image cap" style="height:12rem;">
                      <div class="card-body">
                        <h5 class="card-title">{{this.product.item}}</h5>
                        <p class="card-text">Rs.{{this.product.price}}</p>
                        <p class="card-text">{{this.product.quantity}}</p>
                        <p class="card-text">Quantity<span> </span>{{this.quantity}}</p>
                      </div>

                </div>
            </div>
        </div>
    </div>
    {{/each}}
</section>